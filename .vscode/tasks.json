{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "OpenGL: g++.exe build active file",
            "type": "cppbuild",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}\\src\\glad.c",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-luser32",
                "-o",
                "${workspaceFolder}\\build\\${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "detail": "compiler: C:\\msys64\\ucrt64\\bin\\g++.exe"
        },
        {
            "type": "cppbuild",
            "label": "Build and Run OpenGL",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}\\src\\glad.c",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "-lglfw3",
                "-lopengl32",
                "-lgdi32",
                "-luser32",
                "-o",
                "${workspaceFolder}\\build\\${fileBasenameNoExtension}",
                "&&",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}