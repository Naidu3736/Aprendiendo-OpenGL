{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "OpenGL: g++.exe build active file",
            "type": "cppbuild",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}\\src\\core\\glad.c",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "-lglfw3",
                "-lengine",
                "-lopengl32",
                "-lgdi32",
                "-luser32",
                "-o",
                "${workspaceFolder}\\build\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "compiler: C:\\msys64\\ucrt64\\bin\\g++.exe",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "type": "cppbuild",
            "label": "Build and Run OpenGL",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "${workspaceFolder}\\src\\core\\glad.c",
                "-I${workspaceFolder}\\include",
                "-L${workspaceFolder}\\lib",
                "-lglfw3",
                "-lengine",
                "-lopengl32",
                "-lgdi32",
                "-luser32",
                "-o",
                "${workspaceFolder}\\build\\${fileBasenameNoExtension}",
